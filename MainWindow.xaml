<Window x:Class="DataBinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBinding"
        mc:Ignorable="d"
        Title="DataBinding" Height="150" Width="300"
        WindowStartupLocation="CenterScreen">
        
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="45.697"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="29.96"/>
            <RowDefinition Height="29.96"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Label Grid.Column="1" Content="Name" HorizontalAlignment="Center"  Grid.Row="1" VerticalAlignment="Center"/>
        <Label Grid.Column="1" Content="Age" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Top"/>
        <Button Grid.Column="1" Content="Info"   Grid.Row="4"   Grid.ColumnSpan="2" Click="ButtonInfo_Click"/>
        <TextBox Grid.Column="2"  Grid.Row="1" Text="{Binding Name, Mode=OneWayToSource}" Margin="2"/>
        <TextBox Grid.Column="2"  Grid.Row="2" Text="{Binding Age, Mode=OneWayToSource}" Margin="2" />
        <Border BorderBrush="#FFB7ACAC" BorderThickness="1" Grid.Column="2" Grid.Row="2" Margin="2,2,2,2"/>
        <Border BorderBrush="#FFB7ACAC" BorderThickness="1" Grid.Column="2" Grid.Row="1" Margin="2,2,2,2"/>
        
    </Grid>
</Window>
